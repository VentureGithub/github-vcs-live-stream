    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
  <link rel="stylesheet" href="/public/css/main.css" />
  <script defer type="module" src="/public/js/index.js"></script>
  <title>Admin Streamer</title>
</head>

<body>

  <div class="admin-streaming">
    <header class="logo">
      <!-- <span >Admin Streaming</span> -->
      <img src="/public/image/Maths_Mama_Logo2.png" alt="" class="logo-img">
      <h1 class="logo-name">Maths Mama</h1>
      <!-- <p style="float: right;">Viewer</p> -->
    </header>
    <div class="live-streaming mt-5">
      <div class="video">
        <video id="videoRecording" style="width:fit-content" autoplay muted></video>
        <div class="controls">
          <button style="position: absolute; right: 120px;" id="sound" type="button">Unmute</button>
        </div>
      </div>
      <div class="chat-section">
        <section class="livechat">
          <div class="accordion">
            <div class="accordion-section">
                <div class="accordion-header">See Chats  <i class="fa-regular fa-eye" style=" margin-left:10px; font-size: 15px;"></i><span id="viewerCount" style="margin-left: 5px;">0</span> <i class="fa-solid fa-caret-down" style="float:right;"></i></div>
                <div class="accordion-content">
                  <div class="messages" id="messages">
                  <ul id="message-list"></ul>
                </div>
              </div>
            </div>
          <div class="chat-input-container">
            <input type="text" id="chat-input" placeholder="Type away!" />
            <button type="submit" class="btn">Chat</button>
          </div>
        </section>
      </div>
    </div>

  </div>
  <script src="/public/js/accordian.js"></script>
</body>

</html>